<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="110dp">

        <TextView
            android:id="@+id/article_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="5dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:textAppearance="@style/VideoItem.Small.Title"/>

        <com.wnafee.vector.MorphButton
            android:id="@+id/article_item_img_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:clickable="false"
            android:layout_alignParentRight="true"
            app:vc_startDrawable="@drawable/clipped_circle_reverse"
            app:vc_endDrawable="@drawable/clipped_circle_reverse"/>

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="9dp"
            app:iiv_size="16dp"
            app:iiv_color="@color/md_white_1000"
            app:iiv_icon="gmd-library-books"/>

        <TextView
            android:id="@+id/article_item_resource_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/VideoItem.Small"
            android:layout_margin="5dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>